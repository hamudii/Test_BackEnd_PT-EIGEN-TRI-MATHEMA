<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library Members</title>
  <link href="/styles/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Library Members</h1>
    <table class="min-w-full bg-white border">
      <thead>
        <tr>
          <th class="py-2 px-4 border">Member Code</th>
          <th class="py-2 px-4 border">Name</th>
          <th class="py-2 px-4 border">Borrowed Books</th>
        </tr>
      </thead>
      <tbody>
        <% members.forEach(member => { %>
          <tr>
            <td class="py-2 px-4 border"><%= member.code %></td>
            <td class="py-2 px-4 border"><%= member.name %></td>
            <td class="py-2 px-4 border">
              <% member.borrowedBooks.forEach(book => { %>
                <div><%= book.title %> by <%= book.author %></div>
              <% }) %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
