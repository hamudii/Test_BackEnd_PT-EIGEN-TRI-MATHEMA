<!-- index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library Management System</title>
  <link href="/styles/tailwind.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Library Management System</h1>

    <!-- Members Section -->
    <section class="mb-8">
      <h2 class="text-xl font-semibold mb-2">Members</h2>
      <table class="min-w-full bg-white border">
        <thead>
          <tr>
            <th class="py-2 px-4 border">Code</th>
            <th class="py-2 px-4 border">Name</th>
            <th class="py-2 px-4 border">Borrowed Books</th>
            <th class="py-2 px-4 border">Penalty Until</th>
          </tr>
        </thead>
        <tbody>
          <% members.forEach(member => { %>
            <tr>
              <td class="py-2 px-4 border"><%= member.code %></td>
              <td class="py-2 px-4 border"><%= member.name %></td>
              <td class="py-2 px-4 border"><%= member.borrowedBooks.length %></td>
              <td class="py-2 px-4 border"><%= member.penaltyUntil ? member.penaltyUntil.toLocaleDateString() : 'None' %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <!-- Mengubah link menjadi tombol -->
      <form action="/members/getReturn" method="get">
        <button type="submit" class="block mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
          Return Book
        </button>
      </form>
    </section>

    <!-- Books Section -->
    <section>
      <h2 class="text-xl font-semibold mb-2">Books</h2>
      <table class="min-w-full bg-white border">
        <thead>
          <tr>
            <th class="py-2 px-4 border">Code</th>
            <th class="py-2 px-4 border">Title</th>
            <th class="py-2 px-4 border">Author</th>
            <th class="py-2 px-4 border">Stock</th>
          </tr>
        </thead>
        <tbody>
          <% books.forEach(book => { %>
            <tr>
              <td class="py-2 px-4 border"><%= book.code %></td>
              <td class="py-2 px-4 border"><%= book.title %></td>
              <td class="py-2 px-4 border"><%= book.author %></td>
              <td class="py-2 px-4 border"><%= book.stock %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>

      <form action="/books/check-stock" method="get">
        <button type="submit" class="block mt-4 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
          Check Book Availability
        </button>
      </form>
    </section>

  </div>
</body>
</html>
